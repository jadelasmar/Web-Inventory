# ========================================
# PostgreSQL Configuration (for Streamlit Cloud)
# ========================================
# This file shows the structure needed for secrets.toml on Streamlit Cloud
# DO NOT commit this file with real credentials to GitHub!

[postgres]
host = "your-database-host.supabase.co"
port = 5432
database = "postgres"
user = "postgres"
password = "your-secure-password-here"

# ========================================
# Local Development
# ========================================
# For local development, you can either:
# 1. Leave this file empty (app will use SQLite)
# 2. Add your local PostgreSQL credentials here
#
# Copy this file to: .streamlit/secrets.toml
# and fill in your actual database credentials
